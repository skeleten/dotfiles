# -*- mode: conf; eval: (rainbow-mode 1); -*-


[global/wm]
margin-bottom = 0
margin-top = 0

[colors]
background	= #32302f
foreground	= #fbf1c7
gray		= #928374
cyan		= #689d6a
blue		= #458588
green		= #98971a
red		= #cc241d
yellow		= #d79921

[bar/bar]
background = ${colors.background}
enable-ipc = true
fixed-center = true
font-0 = "DejaVu Sans:size=10;2"
font-1 = "FontAwesome:size=10;2"
font-2 = "Material Icons:size=12;4"
foreground = ${colors.foreground}
height = 30
module-margin-left = 0
module-margin-right = 0
modules-left =i3
modules-center = title
modules-right = date battery volume
monitor = ${env:pb_disp}
padding-left = 1
padding-right = 3
underline-size = 2
width = 100%

[module/title]
type = internal/xwindow

format = <label>
format-background = ${colors.background}
format-foreground = ${colors.foreground}
format-padding = 4

label = %title%
label-maxlen = 250

[module/volume]
type = internal/volume

format-muted-foreground = ${colors.red}
format-volume = <label-volume>

label-muted  =  %percentage%%
label-volume =  %percentage%%
label-volume-foreground = ${colors.foreground}

master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default

[module/currently_playing]
type = custom/script
exec = currently_playing.sh
interval = 5

[module/i3]
type = internal/i3
format = <label-state>
index-sort = true
ws-num = 5
show-all = true

label-mode = %mode%
label-mode-background = ${colors.background}

label-focused = ◆
label-focused-foreground = ${colors.yellow}
label-focused-background = ${colors.background}
label-focused-padding = 2

label-unfocused = ◆
label-unfocused-foreground = ${colors.gray}
label-unfocused-background = ${colors.background}
label-unfocused-padding = 2

label-urgent = ◆
label-urgent-background = ${colors.background}
label-urgent-foreground = ${colors.red}
label-urgent-padding = 2

label-empty = ◇
label-empty-foreground = ${colors.gray}
label-empty-background = ${colors.background}
label-empty-padding = 2

label-visible = ◆
label-visible-background = ${colors.background}
label-visible-foreground = ${colors.foreground}
label-visible-padding = 2

strip-wsnumbers = true
wrapping-scroll = true

[module/battery]
type = internal/battery

battery = BAT0
adapter = AC
full-at = 99
time-format = %H:%M

format-charging = <label-charging>
format-charging-padding = 1
label-charging =  %percentage%% (%time%)

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-padding = 1
label-discharging = %percentage%% (%time%)

format-full = <label-full>
format-full-padding = 1
format-full-prefix = 
format-full-prefix-foreground = ${colors.green}
label-full = %percentage%%

ramp-capacity-0-foreground = ${colors.red}
ramp-capacity-1-foreground = ${colors.yellow}
ramp-capacity-2-foreground = ${colors.green}
ramp-capacity-3-foreground = ${colors.green}
ramp-capacity-0 =  
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 

[module/date]
date = %Y-%m-%d
interval = 5
format-foreground = ${colors.foreground}
format-margin = 2
label = %date% %time%
time = %H:%M
type = internal/date

[settings]
screenchange-reload = true