# -*- mode: conf; eval: (rainbow-mode 1); -*-
# no_autoconvert
# $mod is Super ("Windows" Key)
set $mod Mod4

# Startups
# Set background
exec --no-startup-id feh --bg-scale ~/.wallpaper
# Display Notifications
exec --no-startup-id dunst
# tint the screen orange-y while dark
exec --no-startup-id redshift
# status bar
exec --no-startup-id ~/.bin/start_polybar.sh
# hotkey daemon
exec --no-startup-id sxhkd


# Colors
set $bg-color			#32302f
set $inactive-bg-color		#32302f
set $text-color			#fbf1c7
set $inactive-text-color	#bdae93
set $urgent-bg-color		#fb4934
set $border-color		#504945
set $indicator-color		#7c6f64
# window colors
#                       border              background         text                 indicator
client.focused          $border-color       $border-color      $text-color          $indicator-color
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color $indicator-color
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color $indicator-color
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          $indicator-color

# 0 size font means our tabbed/stacked windows look clean
# without having a bar at all
font pango:Source Code Pro 0

# Borders, etc
for_window [class=".*"] border pixel 2

# Gaps stuff
gaps inner 5

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# dropdown terminal
exec --no-startup-id urxvt -name dropdown
for_window [instance="dropdown"] floating enable
for_window [instance="dropdown"] resize set 1920px 540px
for_window [instance="dropdown"] move qabsolute position 0 0
for_window [instance="dropdown"] move scratchpad
