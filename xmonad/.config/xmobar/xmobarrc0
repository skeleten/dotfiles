-- -*- mode: haskell -*-

Config {

   -- Appearance
     font        =  "xft:monospace:size=10:antialias=true:hinting=true,JoyPixels:size=9:antialias=true"
   , bgColor     =  "#22262e"
   , fgColor     =  "#d8dee9"
   , position    =  Top
   , border      =  BottomB
   , borderColor =  "#22262e"

   -- Layout
   , sepChar =  "%"   -- delineator between plugin names and straight text
   , alignSep = "}{"  -- separator between left-right alignment
   , template = "  %UnsafeStdinReader% }{ %dynnetwork% <fc=#d8dee9>%date%</fc> "

   -- General behavior
   , lowerOnStart =     True    -- send to bottom of window stack on start
   , hideOnStart =      False   -- start with window unmapped (hidden)
   , allDesktops =      True    -- show on all desktops
   , overrideRedirect = True    -- set the Override Redirect flag (Xlib)
   , pickBroadest =     False   -- choose widest display (multi-monitor)
   , persistent =       True    -- enable/disable hiding (True = disabled)

   -- Scripts located /.local/bin/satusbar
   , commands =

        -- Date and time
        [ Run Date "%a %d.%m.%Y %I:%M:%S %p" "date" 1

        -- Net traffic
        , Run Com "nettraf" [] "" 10

        -- network activity monitor (dynamic interface resolution)
        , Run DynNetwork [ "--template" , "R <rx>| S <tx>"
                         , "-S"         , "True"
                         , "--Low"      , "1000"       -- units: B/s
                         , "--High"     , "5000"       -- units: B/s
                         , "--low"      , "#a3be8c"
                         , "--normal"   , "#a3be8c"
                         , "--high"     , "#bf616a"
                         ] 10
        -- Workspace
        , Run UnsafeStdinReader
        ]
   }
-- # vim: ft=cfg
